{% extends "karionCourseBundle::layout.html.twig" %}

{% block content %}
  <div id="course-list">
    <h2>
{#      {% if course.active %}
          <i class="icon-ok"></i> 
      {% else %}
          <i class="icon-remove"></i>
      {% endif %}
#}      
      {{ course.title }}
    </h2>
    <p>
      {{ course.description }}
    </p>  
    <p>
      <h4>Lessons:</h4>
      <ul>
      {%  for lesson in course.lessons %}
          <li>
            <a href="{{ path('karionLessonBundle_showBySlug', {'courseId': course.id, 'slug': lesson.slug})}}" >
              {{ lesson.title }}
            </a>
          </li>
      {% endfor %}
      </ul>
    </p>
  </div>
{% endblock %}