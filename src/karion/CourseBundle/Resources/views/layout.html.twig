<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Tutor!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
   
        {% stylesheets filter='cssrewrite' 
          '@MopaBootstrapBundle/Resources/bootstrap/docs/assets/css/bootstrap.css'

        %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"
          media="screen" />
        {% endstylesheets %}

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
      <div class="container">
    {% block body %}

      {% block header %}
      <div id="header" class="row">
        <div class="span12">
          <h1>
            <a href="{{ path('karionCourseBundle_homepage') }}">
              Tutor
            </a>
          </h1>
        </div> 
      </div>
      {% endblock %}

      {% block main %}
      <div id="main" class="row">
        <div id="menu" class="span4">
          {% block menu %}
          <h2>Menu</h2>
            <ul class="nav nav-list">
              <li><a href="{{ path('karionCourseBundle_homepage') }}">
                  Strona Główna
              </a></li>
              
            {% if is_granted('ROLE_USER') %}
              <li><a href="{{ path('logout') }}">Wyloguj</a></li>
            {% else %}
              <li><a href="{{ path('login') }}">Zaloguj</a></li>
              <li><a href="{{ path('userNew') }}">Załóż konto</a></li>
            {% endif %}
              
            </ul>
          {% endblock %}
        </div>

        <div id="content" class="span8">
          {% block content %}
            
          {% endblock %}
        </div>

      </div>
      {% endblock %}

    {% endblock %}
          </div> 
   {% block javascripts %}{% endblock %}
    </body>
</html>